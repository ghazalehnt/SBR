{
  "dataset": {
    "name": "CGR",
    "dataset_path": "<DATA_ROOT_PATH>/GR_read_5-folds/example_dataset_totalu160000_su200_sltu200_h1i3000/",
    "binary_interactions": true,
    "relevance_level": 1,
    "train_batch_size": 512,
    "eval_batch_size": 4096,
    "user_text": ["interaction.review"],
    "item_text": ["item.title", "item.description", "item.genres"],
    "max_num_chunks_user": 1,
    "max_num_chunks_item": 1,
    "user_review_choice": "pos_rating_sorted_3",
    "chunk_size": 512,
    "text_in_batch": false,
    "training_neg_sampling_strategy": "random",
    "training_neg_samples": 4,
    "validation_neg_sampling_strategy": "f:validation_neg_random_100",
    "test_neg_sampling_strategy": "f:test_neg_random_100",
    "dataloader_num_workers": 8
  },
  "trainer": {
    "optimizer": "Adam",
    "lr": 4e-3,
    "wd": 1e-8,
    "epochs": 100,
    "scheduler_type": "linear",
    "scheduler_num_warmup_steps": 0,
    "loss_fn": "BCE",
    "valid_metric": "valid_ndcg_cut_10",
    "early_stopping_patience": 10,
    "use_amp": false
  },
  "model": {
    "name": "VanillaClassifier_precalc",
    "pretrained_model": "bert-base-uncased",
    "agg_strategy": "mean_last",
    "chunk_agg_strategy": "max_pool",
    "append_id": false,
    "tune_BERT": false,
    "use_CF": false,
    "freeze_prec_reps": true,
    "precalc_batch_size": 4,
    "similarity": "dot_product",
    "k": 0
  },
  "experiment_root": "<EXP_ROOT_PATH>/vc_implicit_BCE/",
  "params_in_exp_dir": ["model.append_id", "model.k", "model.similarity",
    "trainer.lr", "trainer.wd", "dataset.train_batch_size",
    "dataset.eval_batch_size",
    "dataset.training_neg_sampling_strategy", "dataset.training_neg_samples",
    "dataset.validation_neg_sampling_strategy", "dataset.test_neg_sampling_strategy",
    "dataset.max_num_chunks_user", "dataset.max_num_chunks_item", "dataset.chunk_size",
    "model.chunk_agg_strategy", "model.agg_strategy"]
}
